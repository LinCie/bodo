{
  "imports": {
    "#/": "./src/",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/text": "jsr:@std/text@^1.0.16",
    "hono": "npm:hono",
    "kysely": "npm:kysely@^0.28.8",
    "pino": "npm:pino@^10.1.0",
    "zod": "npm:zod@^4.1.13",
    "fast-check": "npm:fast-check@^3.23.0"
  },
  "tasks": {
    "start": "deno run --allow-net ./src/server.ts",
    "dev": "deno run --watch --allow-net --allow-env --allow-sys ./src/server.ts | deno run --allow-read --allow-env npm:pino-pretty",
    "test": "deno test --allow-all"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}